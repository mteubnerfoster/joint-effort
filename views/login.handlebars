<h1>LOGIN PAGE</h1>
<section class='login-section'>
<div id="login"class="row">
  <div class="col-md-6">
    <h2 class='login-title'>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="submitbtn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 class='login-title'>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <label for="birthdate-signup">birthdate:</label>
        <input class="form-input" type="text" id="birthdate-signup" />
      </div>
      <div class="form-group">
        <button class="submitbtn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>
</section>
<script src="/assets/js/login.js"></script>